{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json",
    "handler": "Microsoft.Compute.MultiVm",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [
            {
                "name": "adminUsername",
                "type": "Microsoft.Compute.UserNameTextBox",
                "label": "Cluster VM Admin Account Name",
                "toolTip": "Administrator user name used for SSH to your VMs. 'admin' and 'root' are not valid",
                "osPlatform": "Linux",
                "constraints": {
                    "required": true
                }
            },
            {
                "name": "adminPassword",
                "type": "Microsoft.Common.PasswordBox",
                "label": {
                    "password": "Password",
                    "confirmPassword": "Confirm password"
                },
                "toolTip": "",
                "constraints": {
                    "required": true,
                    "regex": "",
                    "validationMessage": ""
                },
                "options": {
                    "hideConfirmation": false
                },
                "visible": true
            },
            {
                "name": "dnsLabelPrefix",
                "type": "Microsoft.Common.TextBox",
                "label": "DNS Label Prefix",
                "defaultValue": "",
                "toolTip": "Unique DNS Name for the Public IP used to access the Virtual Machine.",
                "constraints": {
                  "required": true,
                  "regex": "^[a-z0-9A-Z-]{1,20}$",
                  "validationMessage": "Only alphanumeric characters and hyphens (-) are allowed, and the value must be 1-20 characters long."
                },
                "visible": true
              }
        ],
        "steps": [],
        "outputs": {
            "adminUsername": "[basics('adminUsername')]",
            "adminPassword": "[basics('adminPassword')]",
            "dnsLabelPrefix": "[basics('dnsLabelPrefix')]"
        }
    }
}